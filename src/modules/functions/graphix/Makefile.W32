TOPDIR = ..\..\..\..

SUBDIRS =

!INCLUDE $(TOPDIR)\makefiles\nmake\platform.mk

INCLUDE_CXXFLAGS = \
	/D_WIN32_WINNT=0x504 /DWITH_LIBHPDF

INCLUDE_DIRS = \
	/I. \
	/I$(TOPDIR)\include \
	/I$(TOPDIR)\src \
	/I$(TOPDIR) \
	/I"$(BOOST_INCLUDE_DIR)" \
	/I"$(TOPDIR)\libhpdf\include"

INCLUDE_LDFLAGS = \
	$(BOOST_LDFLAGS)
	
INCLUDE_LIBS = \
	$(TOPDIR)\src\libwolframe\wolframe.lib \
	$(TOPDIR)\src\libwolframe_prnt\wolframe_prnt.lib \
	"$(TOPDIR)\libhpdf\src\hpdf.lib" \
	"$(TOPDIR)\zlib\zlib.lib" "$(TOPDIR)\libpng\libpng.lib" \
	kernel32.lib advapi32.lib Ws2_32.lib

DYNAMIC_MODULE = \
	mod_graphix.dll

CPP_OBJS = \
	prnt_pdfPrinter_libhpdf.obj \
	prnt_pdfPrinterDocument_libhpdf.obj

CPP_OBJS = \
	$(CPP_OBJS) mod_haru_pdf_printer.obj

all: $(DYNAMIC_MODULE)

!INCLUDE $(TOPDIR)\makefiles\nmake\sub.mk

$(DYNAMIC_MODULE): $(CPP_OBJS)
	$(LINK) /dll /def:ModHaruPdfPrinter.def /out:$@ $(LDFLAGS) $(LIBS) $?

local_all:

local_clean:
	@-erase $(DYNAMIC_MODULE) 2>NUL
	@-erase $(CPP_OBJS) 2>NUL

local_distclean:

local_test:


