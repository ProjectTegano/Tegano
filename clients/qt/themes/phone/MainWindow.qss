/* first some screen dependent changes */
/* this file is for QVGA devices */

/*
 *  Logviewer 
 */
 QLineEdit{
	background-color: #848284;
	color: white;
	border-radius: 3px;
	
}

QTabWidget {
	background-color: black;
	/*max-width: 240;*/
}

/* initiate the tab-bar so we can style it */
QTabWidget::tab-bar{}

/* make a border on the top */
QTabWidget::pane { /* The tab widget frame */
    border-top: 1px solid #848284;
}

/* style the TabBar */
QTabBar::tab {
	background-color: QLinearGradient( x1: 0, y1: 0, x2: 0, y2: 1, stop: 0 #313031, stop: 0.1 #292829, stop: 0.49 #212421, stop: 0.5 #181818, stop: 1 #100C10);
	color: white;
	border-top-left-radius: 2;
	border-top-right-radius: 2;
	padding: 3px;
	margin-right: 3px;
}
QTabBar::tab:selected {
	/* do some magic with Gardient colors */
	background-color: QLinearGradient( x1: 0, y1: 0, x2: 0, y2: 1, stop: 0 #3C3C3C, stop: 0.1 #525252, stop: 0.49 #6F6F6F, stop: 0.5 #757575, stop: 1 #999999);
}

/* style the QCalendarWidget (must be refered to as QTableView) */
QTableView {
	/* because QCalendarWidget is picky on color syntax
	 * we will use rgb(red,green,blue) method to add the
	 * color code #848284
	 */
	background-color: rgb(132,130,132);
	alternate-background-color: rgb(139, 141, 151);
}

