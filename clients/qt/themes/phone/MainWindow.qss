/* lets style those default plastique buttons
 * on android to something more native looking
 */
QPushButton {
	/* make the fonts black on all buttons */
	color: black;
	
	/* do some magic with Gardient colors */
	background-color: QLinearGradient( x1: 0, y1: 0, x2: 0, y2: 1, stop: 0 #EFEFEF, stop: 0.1 #E7E7E7, stop: 0.49 #CECBCE, stop: 0.5 #BDBABD, stop: 1 #C6C3C6);
	
	/* make a border around them for shadowing */
	border-width: 1px;
	
	/* make the border grey */
	border-color: grey;/*#339;*/
	
	/* make the border a solid line */
	border-style: solid;
	
	/* round the edges of the border */
	border-radius: 7;


	/* default font size */
	font-size: 10px;
	
	/* lets place up the buttons nicely after styling */
	margin: 3px;
	margin-left: 5px;
	margin-right: 5px;
	min-height: 32px;
	min-width: 40px;
	font-size: 15px;
	font-weight: bold;
}
QPushButton:Pressed {
	/* do some magic with Gardient colors */
	background-color: QLinearGradient( x1: 0, y1: 0, x2: 0, y2: 1, stop: 0 #FFD342, stop: 0.1 #F7BE18, stop: 0.49 #EF9E00, stop: 0.5 #EFA610, stop: 1 #F7AA18);
}

/* lets make it easier to hit those darn scrollbars */
QScrollbar::handle{
	background: black;
	min-height: 30px;
	min-width: 35px;
}

