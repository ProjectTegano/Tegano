TOPDIR = ..

SUBDIRS = modules database AAAA wolfilter

# all broken on windows due to working telnet
#!IFDEF WITH_EXPECT
#SUBDIRS = \
#	$(SUBDIRS) expect
#!ENDIF

!IFDEF WITH_LIBXML2
SUBDIRS = \
	$(SUBDIRS) libxml2
!ENDIF

!IFDEF WITH_LIBXSLT
!IFDEF WITH_LIBXML2
SUBDIRS = \
	$(SUBDIRS) libxslt
!ENDIF
!ENDIF

!IFDEF WITH_LIBHPDF
SUBDIRS = \
	$(SUBDIRS) libhpdf
!ENDIF

!IFDEF WITH_ICU
SUBDIRS = \
	$(SUBDIRS) boost-locale
!ENDIF

!IFDEF WITH_FREEIMAGE
SUBDIRS = \
	$(SUBDIRS) freeimage
!ENDIF

!INCLUDE $(TOPDIR)\makefiles\nmake\platform.mk

INCLUDE_CXXFLAGS = \
	/D_WIN32_WINNT=0x504

INCLUDE_DIRS = \
	/I$(TOPDIR)\include /I. \
	/I$(TOPDIR)\src \
	/I$(TOPDIR) \
	/I"$(BOOST_INCLUDE_DIR)" \
	/I$(TOPDIR)\gtest\include \
	/I$(TOPDIR)\wtest

# Note: libraries are picked automatically on Windows!
INCLUDE_LDFLAGS = \
	$(BOOST_LDFLAGS)

INCLUDE_LIBS = \
	Advapi32.lib Ws2_32.lib \
	$(TOPDIR)\gtest\gtest-all.obj \
	$(TOPDIR)\wtest\wtest.lib \
	$(TOPDIR)\src\libwolframe\wolframe.lib \
	$(TOPDIR)\src\libwolframe_serialize\wolframe_serialize.lib \
	$(TOPDIR)\src\libwolframe_database\wolframe_database.lib \
	$(TOPDIR)\src\libwolframe_langbind\wolframe_langbind.lib

# Lua
!IFDEF WITH_LUA
INCLUDE_CXXFLAGS = \
	$(INCLUDE_CXXFLAGS) /DWITH_LUA
INCLUDE_DIRS = \
	$(INCLUDE_DIRS) /I$(TOPDIR)\lua\src
INCLUDE_LIBS = \
	$(INCLUDE_LIBS) $(TOPDIR)\lua\src\lua_static.lib
!ENDIF

# libxml2
!IFDEF WITH_LIBXML2

INCLUDE_CXXFLAGS = \
	$(INCLUDE_CXXFLAGS) /DWITH_LIBXML2
INCLUDE_DIRS = \
	$(INCLUDE_DIRS) /I. /I"$(LIBXML2_DIR)\include" /I"$(LIBXML2_DIR)\include\libxml" \
	/I"$(WIN_ICONV_DIR)"
INCLUDE_LIBS = \
	$(INCLUDE_LIBS) "$(LIBXML2_DIR)\lib\libxml2.lib"
!ENDIF

# Postgresql
!IFDEF WITH_PGSQL

INCLUDE_LIBS = \
	$(INCLUDE_LIBS) "$(PGSQL_DIR)\lib\libpq.lib"

!ENDIF

# libhpdf
!IFDEF WITH_LIBHPDF
INCLUDE_CXXFLAGS = \
	$(INCLUDE_CXXFLAGS) /DWITH_LIBHPDF

INCLUDE_DIRS = \
	$(INCLUDE_DIRS) /I"$(TOPDIR)\libhpdf\include"

INCLUDE_LIBS = \
	$(INCLUDE_LIBS) "$(TOPDIR)\libhpdf\src\hpdf.lib" \
	"$(TOPDIR)\zlib\zlib.lib" "$(TOPDIR)\libpng\libpng.lib"
!ENDIF

