TOPDIR = ..\..\..\..\..

SUBDIRS =

!INCLUDE $(TOPDIR)\makefiles\nmake\platform.mk

INCLUDE_CXXFLAGS = \
	/D_WIN32_WINNT=0x504

INCLUDE_DIRS = \
	/I. \
	/I$(TOPDIR)\include \
	/I$(TOPDIR)\src\modules\database\sqlite3 \
	/I"$(BOOST_INCLUDE_DIR)" \
	/I"$(TOPDIR)\3rdParty\sqlite3"

INCLUDE_LDFLAGS = \
	LIBPATH:$(TOPDIR)\src\libwfshared \
	$(BOOST_LDFLAGS)

INCLUDE_LIBS = \
	$(TOPDIR)\src\libwolframe\wolframe.lib \
	$(TOPDIR)\src\libwolframe_database\wolframe_database.lib \
	$(TOPDIR)\3rdParty\sqlite3\sqlite3.lib \
	kernel32.lib advapi32.lib Ws2_32.lib \
	wfshared.lib

DYNAMIC_MODULE = \
	mod_db_sqlite3test.dll

CPP_OBJS = \
	SQLiteModuleFiles.obj \
	SQLiteTest.obj \
	mod_db_sqlite3test.obj

all: $(DYNAMIC_MODULE)

!INCLUDE $(TOPDIR)\makefiles\nmake\sub.mk

$(DYNAMIC_MODULE): $(CPP_OBJS)
	$(LINK) /dll /def:SQLiteTestModule.def /out:$@ $(LDFLAGS) $(LIBS) $?

local_all:

local_clean:
	@-erase $(DYNAMIC_MODULE) 2>NUL
	@-erase $(CPP_OBJS) 2>NUL

local_distclean:

local_test:
