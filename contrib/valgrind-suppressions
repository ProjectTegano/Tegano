# https://bugzilla.redhat.com/show_bug.cgi?id=627875
# https://bugzilla.redhat.com/show_bug.cgi?id=629673
{
   <insert_a_suppression_name_here>
   Memcheck:Leak
   fun:malloc
   fun:_ZN5boost6detail25get_once_per_thread_epochEv
   ...
}

